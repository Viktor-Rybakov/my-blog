{
  "private": true,
  "scripts": {
    "start": "eleventy --serve --quiet",
    "lint": "editorconfig-checker",
    "lighthouse": "npx lhci autorun",
    "stylesMinify": "rm -rf dist/styles && npx postcss src/styles/index.css --use postcss-import --use postcss-media-minmax --use postcss-csso --no-map --output dist/styles/index.css",
    "build": "npm run start && npm run stylesMinify"
  },
  "browserslist": [
    "last 2 version",
    "not dead",
    "not ie <= 11",
    "iOS >= 12"
  ],
  "devDependencies": {
    "@lhci/cli": "^0.6.1",
    "@11ty/eleventy": "^0.11.1",
    "editorconfig-checker": "^3.3.0",
    "html-minifier": "^4.0.0",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "postcss-csso": "^5.0.0",
    "postcss-import": "^14.0.0",
    "postcss-media-minmax": "^4.0.0"
  }
}
